<mvc:View
	id="productView"
	controllerName="sap.ui.demo.cart.controller.Product"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Page
		id="page"
		title="{Name}"
		showNavButton="{device>/isPhone}"
		navButtonPress="onNavButtonPress" >
		<headerContent>
			<Button
				icon="sap-icon://cart"
				visible="{device>/isPhone}"
				tooltip="{i18n>toCartButtonTooltip}"
				press="onCartButtonPress" />
			<ToolbarSpacer/>
			<Button
				text="Switch Device"
				press="onSwitchDeviceButtonPress" />
			<Button
				text="Login"
				press="onOpenLoginDialog"/>
		</headerContent>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button
					icon="sap-icon://cart-3"
					tooltip="{i18n>productAddButtonTooltip}"
					press="onAddButtonPress" />
			</Toolbar>
		</footer>
		<content>
			<ObjectHeader
				title="{Name}"
				number="{
					path : 'Price',
					formatter : '.formatter.price'
				}"
				numberUnit="EUR">
				<attributes>
					<ObjectAttribute
						title="{i18n>productSupplierAttributeText}"
						text="{SupplierName}" />
					<ObjectAttribute
						title="{i18n>productDescriptionAttributeText}"
						text="{ShortDescription}" />
					<ObjectAttribute
						title="{i18n>productWeightAttributeText}"
						text="{Weight} {WeightUnit}"/>
					<ObjectAttribute
						title="{i18n>productMeasuresAttributeText}"
						text="{DimensionWidth} {Unit}, {DimensionDepth} {Unit}, {DimensionHeight} {Unit}"/>
				</attributes>
				<statuses>
					<ObjectStatus
						text="{
							path : 'Status',
							formatter : '.formatter.statusText'
						}"
						state="{
							path : 'Status',
							formatter : '.formatter.statusState'
						}" />
				</statuses>
			</ObjectHeader>
			<VBox
				alignItems="Center"
				renderType="Div">
					<Image
						id = "productImage"
						src= "{
							path : 'PictureUrl',
							formatter : '.formatter.pictureUrl'
						}"
						decorative="true"
						class="sapUiSmallMargin"
						press="onPicturePress"
						width="100%"
					/>
			</VBox>
		</content>
		<dependents>
			<LightBox id="lightBox">
				<imageContent>
					<LightBoxItem
						imageSrc="{PictureUrl}"
						title="{Name}"/>
				</imageContent>
			</LightBox>
			<Dialog
				id="loginDialog"
				title="Login">
				<content
					class="sapUiSmallMargin">
					<Label
						text="Username"/>
					<Input
						placeholder="Enter Username"/>
					<Label
						text="Password"/>
					<Input placeholder="Enter Password"/>
					<Link
						text="Not registered yet? Create a new account!"
						press="onRegistrationLinkPress" />
				</content>
				<buttons>
					<button
						text="Cancel"
						type="Reject"
						press="onLoginCancelButtonPress"/>
					<button
						text="Submit"
						press="onLoginSubmitButtonPress"
						type="Accept"/>
				</buttons>
			</Dialog>
			<Dialog
				id="createAccountDialog"
				title="Create a New Account">
				<content
						class="sapUiSmallMargin">
					<Label
						text="Username"/>
					<Input
						placeholder="Enter Username"/>
					<Label
						text="E-Mail"/>
					<Input
						placeholder="Enter E-Mail"/>
					<Label
						text="Password"/>
					<Input
						placeholder="Enter Password"/>
					<Label
						text="Repeat Password"/>
					<Input
						placeholder="Enter Password"/>
				</content>
				<buttons>
					<button
						text="Cancel"
						type="Reject"
						press="onRegistrationCancelButtonPress"/>
					<button
						text="Submit"
						press="onRegistrationSubmitButtonPress"
						type="Accept"/>
				</buttons>
			</Dialog>
		</dependents>
	</Page>
</mvc:View>