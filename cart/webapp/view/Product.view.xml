<mvc:View
	id="productView"
	controllerName="sap.ui.demo.cart.controller.Product"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.ui.layout.form">
	<Page
		id="page"
		title="{Name}"
		showNavButton="{device>/isPhone}"
		navButtonPress="onNavButtonPress" >
		<headerContent>
			<Button
				icon="sap-icon://cart"
				visible="{device>/isPhone}"
				tooltip="{i18n>toCartButtonTooltip}"
				press="onCartButtonPress" />
			<ToolbarSpacer/>
			<Button
				text="Switch Device"
				press="onSwitchDeviceButtonPress"
				visible="{device>/isTouch}"/>
			<Button
				text="Login"
				press="onOpenLoginDialog"/>
		</headerContent>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button
					icon="sap-icon://cart-3"
					tooltip="{i18n>productAddButtonTooltip}"
					press="onAddButtonPress" />
			</Toolbar>
		</footer>
		<content>
			<ObjectHeader
				title="{Name}"
				number="{
					path : 'Price',
					formatter : '.formatter.price'
				}"
				numberUnit="EUR">
				<attributes>
					<ObjectAttribute
						title="{i18n>productSupplierAttributeText}"
						text="{SupplierName}" />
					<ObjectAttribute
						title="{i18n>productDescriptionAttributeText}"
						text="{ShortDescription}" />
					<ObjectAttribute
						title="{i18n>productWeightAttributeText}"
						text="{Weight} {WeightUnit}"/>
					<ObjectAttribute
						title="{i18n>productMeasuresAttributeText}"
						text="{DimensionWidth} {Unit}, {DimensionDepth} {Unit}, {DimensionHeight} {Unit}"/>
				</attributes>
				<statuses>
					<ObjectStatus
						text="{
							path : 'Status',
							formatter : '.formatter.statusText'
						}"
						state="{
							path : 'Status',
							formatter : '.formatter.statusState'
						}" />
				</statuses>
			</ObjectHeader>
			<VBox
				alignItems="Center"
				renderType="Div">
					<Image
						id = "productImage"
						src= "{
							path : 'PictureUrl',
							formatter : '.formatter.pictureUrl'
						}"
						decorative="true"
						class="sapUiSmallMargin"
						press="onPicturePress"
						width="100%"
					/>
			</VBox>
		</content>
		<dependents>
			<LightBox id="lightBox">
				<imageContent>
					<LightBoxItem
						imageSrc="{PictureUrl}"
						title="{Name}"/>
				</imageContent>
			</LightBox>
			<Dialog
				id="loginDialog"
				title="Login"
				class="sapUiResponsiveMargin">
				<content>
					<f:SimpleForm
						editable="false"
						layout="ResponsiveGridLayout"
						labelSpanXL="3"
						labelSpanL="3"
						labelSpanM="3"
						labelSpanS="12"
						adjustLabelSpan="false"
						emptySpanXL="4"
						emptySpanL="4"
						emptySpanM="4"
						emptySpanS="0"
						columnsXL="1"
						columnsL="1"
						columnsM="1"
						singleContainerFullSize="false">
						<f:content>
							<Label
								class=""
								text="Username"
								labelFor="inputUsername"/>
							<Input
								id="inputUsername"
								placeholder="Enter Username"/>
							<Label
								text="Password"
								labelFor="inputPassword"/>
							<Input
								id="inputPassword"
								placeholder="Enter Password"
								type="Password"/>
							<Link
								text="Not registered yet? Create a new account!"
								press="onRegistrationLinkPress"/>
						</f:content>
					</f:SimpleForm>
				</content>
				<buttons>
					<Button
						text="Cancel"
						type="Reject"
						press="onLoginCancelButtonPress"/>
					<Button
						text="Submit"
						press="onLoginSubmitButtonPress"
						type="Accept"/>
				</buttons>
			</Dialog>
			<Dialog
				id="createAccountDialog"
				title="Create a New Account">
				<content>
					<f:SimpleForm
						editable="false"
						layout="ResponsiveGridLayout"
						labelSpanXL="3"
						labelSpanL="3"
						labelSpanM="3"
						labelSpanS="12"
						adjustLabelSpan="false"
						emptySpanXL="4"
						emptySpanL="4"
						emptySpanM="4"
						emptySpanS="0"
						columnsXL="1"
						columnsL="1"
						columnsM="1"
						singleContainerFullSize="false">
						<f:content>
							<Label
								text="Username"
								labelFor="inputCreateUsername"/>
							<Input
								id="inputCreateUsername"
								placeholder="Enter Username"
								required="true"/>
							<Label
								text="E-Mail"
								labelFor="inputEmail"/>
							<Input
								placeholder="Enter E-Mail"
								id="inputEmail"
								required="true"
								type="Email"/>
							<Label
								text="Password"
								labelFor="inputCreatePassword"/>
							<Input
								placeholder="Enter Password"
								id="inputCreatePassword"
								required="true"
								type="Password"/>
							<Label
								text="Repeat Password"
								labelFor="inputConfirmPassword"/>
							<Input
								placeholder="Enter Password"
								id="inputConfirmPassword"
								required="true"
								type="Password"/>
						</f:content>
					</f:SimpleForm>
				</content>
				<buttons>
					<Button
						text="Cancel"
						type="Reject"
						press="onRegistrationCancelButtonPress"/>
					<Button
						text="Submit"
						press="onRegistrationSubmitButtonPress"
						type="Accept"/>
				</buttons>
			</Dialog>
		</dependents>
	</Page>
</mvc:View>