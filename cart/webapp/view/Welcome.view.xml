			<Dialog
				id="loginDialog"
				title="Login"
				class="sapUiResponsiveMargin">
				<content>
					<f:SimpleForm
						editable="false"
						layout="ResponsiveGridLayout"
						labelSpanXL="3"
						labelSpanL="3"
						labelSpanM="3"
						labelSpanS="12"
						adjustLabelSpan="false"
						emptySpanXL="4"
						emptySpanL="4"
						emptySpanM="4"
						emptySpanS="0"
						columnsXL="1"
						columnsL="1"
						columnsM="1"
						singleContainerFullSize="false">
						<f:content>
							<Label
								class=""
								text="Username"
								labelFor="inputUsername"/>
							<Input
								id="inputUsername"
								placeholder="Enter Username"/>
							<Label
								text="Password"
								labelFor="inputPassword"/>
							<Input
								id="inputPassword"
								placeholder="Enter Password"
								type="Password"/>
							<Link
								text="Not registered yet? Create a new account!"
								press="onRegistrationLinkPress"/>
						</f:content>
					</f:SimpleForm>
				</content>
				<buttons>
					<Button
						text="Cancel"
						type="Reject"
						press="onLoginCancelButtonPress"/>
					<Button
						text="Submit"
						press="onLoginSubmitButtonPress"
						type="Accept"/>
				</buttons>
			</Dialog>
			<Dialog
				id="createAccountDialog"
				title="Create a New Account">
